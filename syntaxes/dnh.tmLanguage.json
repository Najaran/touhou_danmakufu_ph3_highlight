{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Danmakufu",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.dnh",
				"match": "//.*"
			},
			{
				"name": "comment.block.dnh",
				"begin": "/\\*",
				"beginCaptures":{
					"0": {
						"name": "punctuation.definition.comment.begin.dnh"
					}
				},
				"end": "\\*/",
				"endCaptures":{
					"0": {
						"name": "punctuation.definition.comment.end.dnh"
					}
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dnh",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dnh",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dnh",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dnh"
}