{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Danmakufu",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#metas"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.dnh",
				"match": "//.*"
			},
			{
				"name": "comment.block.dnh",
				"begin": "/\\*",
				"beginCaptures":{
					"0": {
						"name": "punctuation.definition.comment.begin.dnh"
					}
				},
				"end": "\\*/",
				"endCaptures":{
					"0": {
						"name": "punctuation.definition.comment.end.dnh"
					}
				}
			}]
		},
		"metas": {
			"patterns": [{
				"name": "meta.preprocessor.scriptheader.touhoudanmakufu.dnh",
				"begin": "^\\s*#TouhouDanmakufu\\b\\s*",
				"end": "(?=(?://|/\\*))|(?<!\\\\)(?=\\n)",
				"patterns": [{
					"name": "meta.preprocessor.scriptheader.touhoudanmakufu.type.dnh",
					"begin": "\\[",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.begin.bracket.square.dnh"
						}
					},
					"end": "\\]",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.end.bracket.square.dnh"
						}
					}
				}]
			},
			{
				"name": "meta.preprocessor.scriptheader.dnh",
				"match": "^\\s*#(ScriptVersion|ID|Title|Text|Image|System|Background|BGM|Player|ReplayName)\\b"
			},
			{
				"name": "meta.preprocessor.include.dnh",
				"begin": "^\\s*#include\\b\\s*",
				"end": "(?=(?://|/\\*))|(?<!\\\\)(?=\\n)",
				"patterns": [{
					"name": "string.quoted.double.dnh",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.dnh"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.dnh"
						}
					}
				}]
			},
			{
				"name": "meta.preprocessor.routine.dnh",
				"match": "^\\s*@(Initialize|Finalize|MainLoop|Loading|Event)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dnh",
				"match": "\\b(alternative|ascent|break|case|descent|else|function|if|in|local|loop|real|return|let|others|sub|task|times|while|yield)\\b"
			},
			{
				"name": "constant.language.dnh",
				"match": "\\b(add|append|compare|concatenate|divide|false|index|index!|length|multiply|not|negative|pi|power|predecessor|remainder|result|slice|successor|subtract|true)\\b"
			},
			{
				"name": "keyword.operator.dnh",
				"match": "(~|\\+|-|\\*|/|%|\\^|!|\\+\\+|--|\\.\\.|==|!=|>=|<=|>|<|&&|\\|\\||\\(\\||\\|\\))"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dnh",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dnh",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dnh"
}